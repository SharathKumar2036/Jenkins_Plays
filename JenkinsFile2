pipeline {
    agent any

    environment {
        IMAGE_NAME = 'webpage-docker'
        CONTAINER_NAME = 'webpage-container'
        PORT = '8080'
    }

    stages {
        stage('Clone Repo') {
            steps {
                #git 'https://github.com/your-username/webpage-docker.git'
                echo "git cloned"
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t ${IMAGE_NAME} ."
                }
            }
        }

        stage('Stop Existing Container (if any)') {
            steps {
                script {
                    sh "docker rm -f ${CONTAINER_NAME} || true"
                }
            }
        }

        stage('Run New Container') {
            steps {
                script {
                    sh "docker run -d --name ${CONTAINER_NAME} -p ${PORT}:80 ${IMAGE_NAME}"
                }
            }
        }
    }

    post {
        success {
            echo "✅ Webpage deployed successfully at http://<your-server-ip>:${PORT}"
        }
        failure {
            echo "❌ Deployment failed!"
        }
    }
}
